@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50">
    <main>
        @Body
    </main>
</div>

<div id="blazor-error-ui" class="fixed bottom-0 left-0 right-0 bg-red-500 text-white p-4 flex items-center justify-between" data-nosnippet>
    <span>An unhandled error has occurred.</span>
    <div>
        <a href="." class="underline mr-4">Reload</a>
        <button class="font-bold" onclick="document.getElementById('blazor-error-ui').style.display='none'">✕</button>
    </div>
</div>
